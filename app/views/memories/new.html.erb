<div class= "container pt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: [@user, @memory], local: true do |f| %>
        <div class="form-group">
          <%= f.label :memory_date, "記念日" %>
          <%= f.date_field :memory_date, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "記録" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, "詳細記録" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <%= f.submit "記録", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>