<%= bootstrap_form_with model: [@user, @memory], local: true do |f| %>
  <div class="field">
    <%= f.label "記念日" %>
    <%= f.date_field :memory_date %>
  </div>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.text_area :content %>
  </div>
  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>