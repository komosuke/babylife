<div class="container pt-5">
  <div class="row">
    <div class="col-10 mx-auto">
　　　　<div class="card">
  　　　<h2 class="text-center">記録</h2>
  <% if user_signed_in? %>
  <ul class="nav nav-tabs">
      <%= link_to "編集", edit_user_memory_path(@user, @memory), method: :get, class: "btn btn-success" %>
    
      <%= link_to "削除", user_memory_path(@user, @memory), method: :delete, class: "btn btn-danger" %>
  </ul>
  <% end %>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <%= @memory.memory_date %>
    </li>
    <li class="list-group-item">
      <%= @memory.title %>
    </li>
    <li class="list-group-item">
      <%= simple_format(@memory.content) %>
    </li>
  </ul>
      </div>
    </div>
  </div>
