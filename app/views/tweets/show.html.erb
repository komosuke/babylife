<div class="container pt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <picture class="card-image-top">
        <%= image_tag @tweet.image, class: "img-fluid img-thumbnail" %>
        </picture>
        <div class="card-body">
          <h4 class="card-title"><%= @tweet.title %></h4>
          <h6 class="card-subtitle">投稿者名:
          <%= @tweet.user.nickname %>
          </h6>
          <P class="card-text"><%= simple_format @tweet.content %></p>
          <p class="card-text">
          
          <small class="card-text">
          <p><%= @tweet.genre_i18n %></p>
          </small>
          <%= render 'favorites/favorite', tweet: @tweet %>
          
          <% if user_signed_in? && current_user.id == @tweet.user_id %>
          <%= link_to "削除", tweet_path(@tweet.id), method: :delete, class: "btn btn-danger btn-sm" %>
          <% end%>
          <p>
            <small class="text-muted">更新日：<%= @tweet.updated_at.strftime("%Y-%m-%d") %></small>
          </p>
         </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
        <% if user_signed_in? %>
        <%= form_with model: [@tweet, @comment], local: true do |f| %>
        <div class="form-group">
        <%= f.text_field :text, placeholder: "コメントを追加", class: "form-control" %>
        </div>
        <%= f.submit "送信", class: "btn btn-primary mt-2" %>
        <% end %>
        <% end %>

        <% @tweet.comments.each do |comment| %>
        <p>
          <%= comment.text %>
          <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
          <% if comment.user == current_user %>
          <%= link_to '削除', [@tweet, comment], method: :delete, class: "btn btn-danger btn-sm" %>
          <% end %>
        </p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>