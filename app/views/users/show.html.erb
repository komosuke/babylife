<div class="container pt-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center"><%= @user.nickname%>のページ</h5>
            <% if user_signed_in? && current_user.id == @user.id %>
              <%= link_to "ユーザー編集", edit_user_path(@user.id), method: :get, class: "btn btn-success" %>
            <% end %>
            <ul class="list-group">
              <li class="list-group-item">生年月日:<%= @user.birthday %></li>
              <li class="list-group-item"><%= simple_format @user.profile %></li>
              <li class="list-group-item"><%= link_to 'いいね一覧', [@user, :favorites] %></li>
            </ul>
        </div>
      </div>
    </div>
 
    <%= render 'shared/calender' %>

    <div class="col-10 mx-auto">
    <% @user.tweets.each do |tweet| %>
    <%= render 'tweets/tweet', tweet: tweet  %>
    <% end %>
  </div>
</div>