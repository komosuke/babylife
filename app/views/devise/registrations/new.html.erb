<div class= "container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :nickname ,"ニックネーム" %>
          <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email%>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password%>
          <i>(英数字混合6文字以上)</i>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, "Password(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
        <label class="form-text">生年月日</label>
        <span class="indispensable">(必須)</span>
        <div class='input-birth-wrap'>
        <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2000,
                    end_year: (Time.now.year + 20),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
        <div class="form-group">
          <%= f.label :profile%>
          <%= f.text_area :profile, autofocus: true, class: "form-control"%>
        </div>
          <%= f.submit "Create Account", class: 'btn btn-primary'%>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
